# NGL Environment Configuration
# Copy this file to .env and update with your secure values

# Database Configuration
POSTGRES_DB=ngl_db
POSTGRES_USER=ngl_user
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# JWT Configuration (CRITICAL: Change in production!)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_TO_STRONG_SECRET

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=0
UPLOAD_RETENTION_DAYS=30

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000

# Default Settings
DEFAULT_TIMEZONE=UTC

# HTTPS Redirect (308 preserves POST/PUT bodies; override only if required)
HTTPS_REDIRECT_STATUS=308
# Force-disable all HTTPS redirects (only for emergency troubleshooting)
FORCE_DISABLE_HTTPS_ENFORCEMENT=false
# Keep HTTPS certificate active even when redirects are disabled
SSL_ALLOW_OPTIONAL_HTTPS=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Generate secure secrets:
#    - JWT Secret: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
#    - DB Password: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. Update .env with generated values
# 4. Add .env to .gitignore (already done)
# 5. Run: docker-compose up --build -d
